        conn.commit()
        cursor.close()
        conn.close()
        print(f"[SUCCESS] Erroræ—¥å¿—å·²å­˜å‚¨: {server_name} -> {error_message[:50]}...")
    except Exception as e:
        print(f"[ERROR] å­˜å‚¨Erroræ—¥å¿—å¤±è´¥: {e}")
        traceback.print_exc()

def process_log_message(message):
