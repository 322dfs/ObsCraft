        print("[WARN] DINGTALK_TOKEN æœªè®¾ç½®ï¼Œè·³è¿‡é’‰é’‰å‘Šè­¦")
        return
    def send():
        try:
            webhook = f"https://oapi.dingtalk.com/robot/send?access_token={token}"
            payload = {
                "msgtype": "text",
